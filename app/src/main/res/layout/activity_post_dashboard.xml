<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".Post.PostDashboard">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/backgroundgradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundgradient">


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_pc_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_black_24dp"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_post_user_name"
                android:layout_toRightOf="@id/iv_pc_user_image"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bikal"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_margin="10dp"
        android:elevation="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundgradient">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_pc_post_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/mainphoto"
                android:scaleType="fitXY" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_pc_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_pc_post_image"
                android:layout_marginTop="-40dp"
                android:text="Lumle"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="30dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/iv_pc_post_image"
                android:layout_margin="20dp"
                android:background="@drawable/backgroundgradient">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgroundgradient">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_pc_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroundgradient"
                        android:text="TITLE"
                        android:textSize="30dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_pc_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_pc_title"
                        android:text="It is near to the village named as guddii and have to walk 2 hrs from village to reach the destination"
                        android:textSize="20dp" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
